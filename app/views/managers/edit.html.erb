<div class="container col-md-3 pt-5">
  <h1 class="text-center">Edit Manager</h1>
  <%= form_for @manager,validate: true do |f|%>
    <div class="form-group">
      <%= f.text_field :email,class:"form-control",required:true%>
    </div>
    <div class="form-group">
      <%= f.file_field :image,class:"form-control btn btn-primary",required:true%>
    </div>
    <div class="form-group">
      <%= f.select(:status,options_for_select([['Active','active'],['Inactive','inactive']]),{},class:"form-control")%>
    </div>
    <%= f.submit "Update",class:"btn btn-primary"%>
  <%end%>
</div>
