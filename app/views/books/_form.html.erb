<%= form_for @book,validate: true do |f| %>
    <div class = 'form-group'>
      <%= f.label :title %>
      <%= f.text_field :title, pattern: '.{2,60}', class:'form-control' %>
    </div>

    <div class = 'form-group'>
      <%= f.label :isbn %>
      <%= f.text_field :isbn, pattern: '.{10,13}', class:'form-control' %>
    </div>

    <div class = 'form-group'>
      <%= f.label :author %>
      <%= f.text_field :author, pattern: '.{3,60}', class:'form-control' %>
    </div>

    <div class = 'form-group'>
      <%= f.label :genre %>
      <%= f.text_field :genre, pattern: '.{2,40}', class:'form-control' %>
    </div>

    <div class = 'form-group'>
      <%= f.label :no_of_copies %>
      <%= f.text_field :no_of_copies, class:'form-control' %>
    </div>

    <div class = 'form-group'>
      <%= f.label :year %>
      <%= f.select :year, (Time.zone.now.year).downto(Time.zone.now.year - 2000), {}, class:'form-control' %>
    </div>

    <div class = 'form-group'>
      <%= f.label :images %>
      <%= f.file_field :images, multiple: true, class:'form-control btn btn-primary' %>
    </div>

    <div class = 'form-group'>
      <%= f.label :status %>
      <%= f.select( :status, options_for_select( [['Available', 'available'], ['Unavailable', 'unavailable']]), {}, class:'form-control') %>
    </div>
    <div class = 'form-group text-center'>
      <%= f.submit 'Submit', class:'btn btn-primary' %>
    </div>
  <% end %>
