<h1 class = 'text-center'><%= @book.title %></h1>
<div class = 'row'>
  <div class = 'col col-md-1'></div>
  <div class = 'col col-md-2'>
    <table class = 'table table-bordered table-hover text-center'>
      <tr><th colspan = '2' class = 'bg-secondary'>Book Details</th></tr>
      <tr>
        <td>Title</td>
        <td><%= @book.title %></td>
      </tr>
      <tr>
        <td>ISBN</td>
        <td><%= @book.isbn %></td>
      </tr>
      <tr>
        <td>Author</td>
        <td><%= @book.author %></td>
      </tr>
      <tr>
        <td>Year</td>
        <td><%= @book.year %></td>
      </tr>
      <tr>
        <td>Genre</td>
        <td><%= @book.genre %></td>
      </tr>
      <tr>
        <td>No of Copies</td>
        <td><%= @book.no_of_copies %></td>
      </tr>
      <tr>
        <td>Status</td>
        <td><%= @book.status.capitalize %></td>
      </tr>
    </table>
  </div>

  <div class = 'col col-md-2'></div>

  <div class = 'col col-md-6'>
    <% @book.images.each do |image|%>
    <%=  image_tag image , size: '200x200'%>
  <% end %>
  <br>
  <br>

  <%if current_user.Issuer? %>
    <%= link_to 'Issue Book', issue_book_request_path(@book), method: :post, class:'btn btn-info' %>
  <% elsif current_user.Manager? %>
    <%= link_to 'Edit', edit_book_path(@book), class:'btn btn-primary' %>
    <%= link_to 'Delete', book_path(@book), data: { confirm: 'Do you really want to delete this book?' }, method: :delete, class:'btn btn-danger' %>
  <% end %>
  </div>
</div>
